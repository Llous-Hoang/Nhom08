@model IEnumerable<EBookShop.Models.Product>
@{
    ViewData["Title"] = "Index";
}
<!-- Page Content -->
<!-- Banner Starts Here -->
<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        <div class="banner-item-01">
            <div class="text-content">
                <h4>Lựa chọn tốt nhất</h4>
                <h2>Rất nhiều sản phẩm mới !</h2>
            </div>
        </div>
        <div class="banner-item-02">
            <div class="text-content">
                <h4>Flash Deals</h4>
                <h2>Nắm bắt những cuốn sách hay</h2>
            </div>
        </div>
        <div class="banner-item-03">
            <div class="text-content">
                <h4>Last Minute</h4>
                <h2>Grab last minute deals</h2>
            </div>
        </div>
    </div>
</div>
<!-- Banner Ends Here -->

<link href="~/css/templatemo-sixteen.css" />
<link href="~/css/style.css" />
<link href="~/css/owl.css" />
<link href="~/css/fontawesome.css" />

<div class="latest-products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Những sản phẩm mới nhất</h2>
                    <a href="~/Products">Xem tất cả sản phẩm <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="product-item">
                        <img src="~/images/product/@item.Image" width="70px">
                        <div class="down-content">
                            <div class="abc">
                                <div><a href="#"><h5>@Html.DisplayFor(modelItem => item.Name)</h5></a></div>
                                <div><h6>@Html.DisplayFor(modelItem => item.Price)</h6></div>
                            </div>
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            <ul class="stars">
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                            </ul>
                            <div class="add"><a href="~/Carts"><button>Thêm vào giỏ hàng</button></a></div>
                            <span>Reviews (12)</span>
                         </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

